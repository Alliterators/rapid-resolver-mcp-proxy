{
    "mcpServers": {
        "rapid-resolver": {
            "command": "python3",
            "args": [
                "mcp-oauth-proxy.py",
                "--client-id",
                "<Replace with your Rapid Resolver Client Id>",
                "--client-secret",
                "<Replace with your Rapid Resolver Client Secret>",
                "--token-url",
                "https://oauth.rapidresolver.com/api/oauth2/token",
                "--mcp-server-url",
                "https://mcp.rapidresolver.com/mcp",
                "--scope",
                "read write"
            ]
        }
    }
}